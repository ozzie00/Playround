<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width    = "match_parent"
    android:layout_height   = "wrap_content"
    android:orientation     = "vertical"
    android:paddingBottom   = "@dimen/margin_large"
    android:paddingLeft     = "@dimen/margin_large"
    android:paddingRight    = "@dimen/margin_large"
    android:focusableInTouchMode="true"
    android:paddingTop      = "@dimen/margin_large" >

    <RelativeLayout android:id= "@+id/profile_avatar_block"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:padding       = "5dip"
        android:background    = "@android:color/white">

        <TextView
            android:id                = "@+id/profile_avatar_text"
            android:layout_width      = "wrap_content"
            android:layout_height     = "40dp"
            android:layout_marginTop  = "8dp"
            android:layout_marginLeft = "8dp"
            android:layout_gravity    = "center_vertical"
            android:gravity           = "center"
            android:textAppearance    = "?android:attr/textAppearanceSmall"
            android:text              = "@string/OMEPARSEMEPROFILEAVATAR"/>

        <ImageView
            android:id                 = "@+id/profile_avatar_image"
            android:layout_width       = "64dp"
            android:layout_height      = "64dp"
            android:layout_marginRight = "8dp"
            android:layout_marginLeft  = "70dp"
            android:layout_gravity     = "center_vertical"
            android:layout_alignParentRight="true"/>

        <!--
        <TextView
            android:id                = "@+id/content_view"
            android:layout_width      = "100dp"
            android:layout_height     = "wrap_content"
            android:layout_marginLeft = "70dp"
            android:layout_below      = "@id/username_view"
            android:gravity           = "left"
            android:paddingLeft       = "8dp"
            android:textAppearance    = "?android:attr/textAppearanceMedium" />

        <ImageView
            android:id                 = "@+id/qrcode_view"
            android:layout_width       = "64dp"
            android:layout_height      = "64dp"
            android:layout_marginLeft  = "70dp"
            android:layout_marginRight = "8dp"
            android:layout_alignTop    = "@id/username_view"
            android:layout_toRightOf   = "@+id/content_view"
            android:gravity            = "right"
            android:clickable          = "true"
            android:src                = "@drawable/ome_me_barcode"/>
        -->

    </RelativeLayout>

    <View
        android:layout_width  = "match_parent"
        android:layout_height = "1dp"
        android:orientation   = "horizontal"
        android:background    = "#c0c0c0"/>

    <RelativeLayout android:id= "@+id/profile_alias_block"
        android:layout_width     = "match_parent"
        android:layout_height    = "wrap_content"
        android:orientation      = "horizontal"
        android:padding          = "5dip"
        android:background       = "@android:color/white">


        <TextView
            android:id                      = "@+id/profile_alias"
            android:layout_width            = "wrap_content"
            android:layout_height           = "40dp"
            android:layout_marginTop        = "8dp"
            android:layout_marginLeft       = "8dp"
            android:layout_gravity          = "center_vertical"
            android:gravity                 = "center"
            android:background              = "@android:color/white"
            android:text                    = "@string/OMEPARSEMEPROFILEALIAS"/>

        <TextView
            android:id                      = "@+id/profile_alias_text"
            android:layout_width            = "wrap_content"
            android:layout_height           = "40dp"
            android:layout_marginTop        = "8dp"
            android:layout_marginRight      = "8dp"
            android:layout_alignTop         = "@id/profile_alias"
            android:layout_toRightOf        = "@id/profile_alias"
            android:gravity                 = "right"
            android:layout_alignParentRight = "true"
            android:background              = "@android:color/white"/>


    </RelativeLayout>

    <View
        android:layout_width  = "match_parent"
        android:layout_height = "1dp"
        android:orientation   = "horizontal"
        android:background    = "#c0c0c0"/>

    <RelativeLayout android:id= "@+id/profile_ID_block"
        android:layout_width     = "match_parent"
        android:layout_height    = "wrap_content"
        android:orientation      = "horizontal"
        android:padding          = "5dip"
        android:background       = "@android:color/white">

        <TextView
            android:id                      = "@+id/profile_ID"
            android:layout_width            = "wrap_content"
            android:layout_height           = "40dp"
            android:layout_marginTop        = "8dp"
            android:layout_marginLeft       = "8dp"
            android:layout_gravity          = "center_vertical"
            android:gravity                 = "center"
            android:background              = "@android:color/white"
            android:text = "@string/OMEPARSEMEPROFILEPLAYROUNDID"/>

        <TextView
            android:id                      = "@+id/profile_ID_text"
            android:layout_width            = "wrap_content"
            android:layout_height           = "40dp"
            android:layout_marginTop        = "8dp"
            android:layout_marginRight      = "8dp"
            android:layout_toRightOf        = "@id/profile_ID"
            android:layout_alignTop         = "@id/profile_ID"
            android:gravity                 = "right"
            android:layout_alignParentRight = "true"
            android:background              = "@android:color/white"/>
    </RelativeLayout>

    <View
        android:layout_width  = "match_parent"
        android:layout_height = "1dp"
        android:orientation   = "horizontal"
        android:background    = "#c0c0c0"/>

    <RelativeLayout android:id= "@+id/profile_QR_block"

        android:layout_width     = "match_parent"
        android:layout_height    = "wrap_content"
        android:orientation      = "horizontal"
        android:padding          = "5dip"
        android:background       = "@android:color/white">


        <TextView
            android:id                      = "@+id/profile_QR"
            android:layout_width            = "wrap_content"
            android:layout_height           = "40dp"
            android:layout_marginTop        = "16dp"
            android:layout_marginLeft       = "8dp"
            android:layout_gravity          = "center_vertical"
            android:gravity                 = "center"
            android:text                    = "@string/OMEPARSEMEPROFILEQRCODE"
            android:background              = "@android:color/white" />

        <ImageView
            android:id                 = "@+id/profile_QR_image"
            android:layout_width       = "wrap_content"
            android:layout_height      = "40dp"
            android:layout_marginTop   = "16dp"
            android:layout_marginRight = "8dp"
            android:layout_alignParentRight="true"
            android:src                = "@drawable/ome_me_barcode"
            android:layout_marginLeft  ="16dp" />


    </RelativeLayout>


</LinearLayout>
