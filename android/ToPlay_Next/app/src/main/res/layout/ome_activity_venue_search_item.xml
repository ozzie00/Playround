<?xml version="1.0" encoding="utf-8"?>

<!-- android:background="@drawable/list_selector"-->
<RelativeLayout xmlns:android    = "http://schemas.android.com/apk/res/android"
    android:layout_width         = "fill_parent"
    android:layout_height        = "wrap_content"
    android:orientation          = "horizontal"
    android:paddingBottom        = "@dimen/margin_medium"
    android:paddingLeft          = "@dimen/margin_small"
    android:paddingRight         = "@dimen/margin_small"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop           = "@dimen/margin_medium"
    android:background           = "@drawable/ome_activity_join_touch_selector">

    <!-- @color/white_absolute"> -->

    <ImageView
        android:id                    = "@+id/venue_sport_type_button"
        android:layout_width          = "64dp"
        android:layout_height         = "64dp"
        android:src                   = "@drawable/ome_me_venue"
        android:layout_marginLeft     = "4dp"
        android:layout_marginRight    = "4dp"
        android:layout_marginTop      = "8dp"
        android:layout_marginBottom   = "8dp"
        android:layout_centerVertical = "true"
        android:background            = "@color/white_absolute" />



    <TextView
        android:id               = "@+id/venue_name_view"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_alignTop  = "@id/venue_sport_type_button"
        android:layout_toRightOf = "@id/venue_sport_type_button"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall"
        android:textColor        = "@color/grey_darkest"
        android:textStyle        = "bold"/>

    <TextView
        android:id               = "@+id/venue_address_view"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_below     = "@id/venue_name_view"
        android:layout_marginTop = "8dp"
        android:layout_toRightOf = "@id/venue_sport_type_button"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id                    = "@+id/venue_phone_button"
        android:layout_width          = "48dp"
        android:layout_height         = "48dp"
        android:layout_marginLeft     = "8dp"
        android:layout_marginRight    = "8dp"
        android:layout_gravity        = "right"
        android:layout_centerVertical = "true"
        android:layout_toRightOf      = "@id/venue_address_view"
        android:cropToPadding         = "false"
        android:focusable             = "false"
        android:adjustViewBounds      = "false"
        android:baselineAlignBottom   = "false"
        android:visibility            = "invisible"
        android:src                   = "@drawable/ome_venue_call"
        android:background            = "@drawable/ome_venue_call_circle_button" />

    <!--android:onClick="toggle"-->

</RelativeLayout>