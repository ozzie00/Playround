<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id            = "@+id/join_linerlayout"
    android:layout_width  = "match_parent"
    android:layout_height = "wrap_content"
    android:orientation   = "vertical"
    android:weightSum     = "1">

    <RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:padding       = "5dip" >

        <ImageView
            android:id                     = "@+id/join_avatar_view"
            android:layout_width           = "48dp"
            android:layout_height          = "48dp"
            android:layout_alignParentLeft = "true"
            android:layout_marginRight     = "8dp"
            android:src                    = "@drawable/ome_map_avataricon" />

        <TextView
            android:id               = "@+id/hostplayerusername"
            android:layout_width     = "wrap_content"
            android:layout_height    = "wrap_content"
            android:layout_alignTop  = "@+id/join_avatar_view"
            android:layout_toRightOf = "@id/join_avatar_view"
            android:paddingTop       = "8dp"
            android:paddingLeft      = "8dp"
            android:textSize         = "12dp"/>

        <TextView
            android:id               = "@+id/hostplayerlevel"
            android:layout_width     = "wrap_content"
            android:layout_height    = "wrap_content"
            android:layout_below     = "@id/hostplayerusername"
            android:layout_marginTop = "1dp"
            android:layout_toRightOf = "@id/join_avatar_view"
            android:text             = ""
            android:paddingLeft      = "8dp" />

        <TextView
            android:id                      = "@+id/hostsubmittime"
            android:layout_width            = "wrap_content"
            android:layout_height           = "wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_alignTop         = "@id/hostplayerusername"
            android:gravity                 = "right"
            android:layout_marginRight      = "5dip"
            android:textSize                = "10dip"/>
    </RelativeLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "16dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/joinsporttypelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/join_sport_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginBottom= "8dp"
            android:layout_marginRight = "4dp"
            android:src                = "@drawable/ome_me_sport"
            android:layout_marginLeft  ="16dp" />

        <TextView
            android:id                     = "@+id/joinsporttype"
            android:layout_width           = "100dp"
            android:layout_height          = "30dp"
            android:layout_alignParentRight= "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "4dp"
            android:layout_marginRight     = "20dp"/>

        <ImageView
            android:id                      = "@+id/joinsporticon"
            android:layout_width            = "wrap_content"
            android:layout_height           = "wrap_content"
            android:src                     = "@drawable/ome_badminton_icon"
            android:gravity                 = "right"
            android:layout_marginTop        = "4dp"
            android:layout_toRightOf        = "@id/joinsporttype"
            android:layout_alignParentRight = "true"
            android:layout_marginRight      = "8dp"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/joininvitetimelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/join_time_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginBottom= "8dp"
            android:layout_marginRight = "4dp"
            android:src                = "@drawable/ome_clock_icon"
            android:layout_marginLeft  ="16dp" />

        <TextView
            android:id                     = "@+id/joininvitetime"
            android:layout_width           = "100dp"
            android:layout_height          = "30dp"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "4dp" />

        <TextView
            android:id                     = "@+id/joininvitetimeText"
            android:layout_width           = "match_parent"
            android:layout_height          = "30dp"
            android:gravity                = "right"
            android:layout_weight          = "1.0"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"/>

        <requestFocus />
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/joininvitecourtlinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/join_court_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginBottom= "8dp"
            android:layout_marginRight = "4dp"
            android:src                = "@drawable/ome_me_venue"
            android:layout_marginLeft  ="16dp" />

        <TextView
            android:id                     = "@+id/joininvitecourt"
            android:layout_width           = "100dp"
            android:layout_height          = "30dp"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "4dp" />

        <TextView
            android:id                     = "@+id/joininvitecourtText"
            android:layout_width           = "fill_parent"
            android:layout_height          = "30dp"
            android:layout_marginLeft      = "20dp"
            android:gravity                = "right"
            android:layout_weight          = "1.0"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"/>

        <requestFocus />
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

</LinearLayout>
