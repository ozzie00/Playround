        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <TextView
            android:id                  = "@+id/chatActiveName"
            android:layout_width        = "match_parent"
            android:layout_height       = "wrap_content"
            android:layout_marginLeft   = "8dp"
            android:contentDescription  = "Name of active friend"
            android:textColor           = "@color/grey_darkest"
            android:textSize            = "24sp"
            android:textStyle           = "bold"
            android:ellipsize           = "end"
            android:singleLine          = "true"
            android:layout_marginTop    = "4dp"
            android:layout_marginBottom = "-5dp"
            android:text=""/>

        <TextView
            android:id="@+id/isTyping"
            android:text="@string/OMEPARSECHATTYPING"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:contentDescription="Status of active friend"
            android:textColor="#df354a"
            android:textSize="13sp"
            android:ellipsize="end"
            android:singleLine="true"/>


        <RelativeLayout
            android:orientation   = "horizontal"
            android:layout_width  = "wrap_content"
            android:layout_height = "wrap_content">

            <TextView
                android:id                  = "@+id/chat_friend_status_icon"
                android:layout_width        = "10dp"
                android:layout_height       = "10dp"
                android:layout_marginTop    = "4dp"
                android:layout_marginLeft   = "8dp"
                android:layout_marginRight  = "@dimen/margin_small"
                />

            <TextView
                android:id                 = "@+id/chatActiveStatus"
                android:text               = ""
                android:layout_width       = "wrap_content"
                android:layout_height      = "wrap_content"
                android:layout_marginTop   = "0dp"
                android:layout_alignTop    = "@id/chat_friend_status_icon"
                android:layout_toRightOf   = "@id/chat_friend_status_icon"
                android:contentDescription = "Status of active friend"
                android:textColor          = "@color/gray_darker"
                android:textSize           = "10sp"
                android:textStyle          = "bold"
                android:ellipsize          = "end"
                android:singleLine         = "true"/>



        </RelativeLayout>



        </LinearLayout>

