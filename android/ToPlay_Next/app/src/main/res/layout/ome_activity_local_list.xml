<?xml version="1.0" encoding="utf-8"?>

<!-- android:background="@drawable/list_selector"-->
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:padding       = "5dip" >

    <!--  ListRow Left Thumbnail image -->
    <LinearLayout android:id           = "@+id/local_avatar_line_block"
        android:layout_width           = "wrap_content"
        android:layout_height          = "wrap_content"
        android:padding                = "3dip"
        android:paddingLeft            = "8dp"
        android:paddingRight           = "8dp"
        android:layout_alignParentLeft = "true"
        android:background             = "@layout/ome_map_avatarbackground"
        android:layout_marginRight     = "5dip"
        android:layout_centerVertical = "true">

        <ImageView
            android:id                 = "@+id/avatar_view"
            android:layout_width       = "48dp"
            android:layout_height      = "48dp"
            android:layout_marginRight = "8dp"
            android:src                = "@drawable/ome_map_avataricon"/>

    </LinearLayout>

    <TextView
        android:id               = "@+id/username_view"
        android:layout_width     = "wrap_content"
        android:layout_height    = "wrap_content"
        android:layout_alignTop  = "@+id/local_avatar_line_block"
        android:layout_toRightOf = "@id/local_avatar_line_block"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall" />

    <!--
    <TextView
        android:id               = "@+id/content_view"
        android:layout_width     = "wrap_content"
        android:layout_height    = "wrap_content"
        android:layout_below     = "@id/username_view"
        android:layout_marginTop = "1dp"
        android:layout_toRightOf = "@+id/local_avatar_line_block"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall" />
    -->


    <ImageView
        android:id                 = "@+id/local_venue_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "8dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "4dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_avatar_line_block"
        android:layout_below       = "@id/username_view"
        android:src                = "@drawable/ome_small_venue" />

    <TextView
        android:id               = "@+id/local_venue_address"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_marginTop = "1dp"
        android:layout_alignTop  = "@id/local_venue_icon_view"
        android:layout_toRightOf = "@+id/local_venue_icon_view"
        android:layout_below     = "@id/username_view"
        android:paddingLeft      = "4dp"
        android:textSize         = "12dip" />

    <ImageView
        android:id                 = "@+id/local_person_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "8dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_avatar_line_block"
        android:layout_below       = "@id/local_venue_icon_view"
        android:src                = "@drawable/ome_small_person" />

    <TextView
        android:id                  = "@+id/local_person_number"
        android:layout_width        = "wrap_content"
        android:layout_height       = "wrap_content"
        android:layout_marginLeft   = "4dp"
        android:layout_marginRight  = "4dp"
        android:layout_marginBottom = "2dp"
        android:layout_alignTop     ="@+id/local_person_icon_view"
        android:layout_toRightOf    = "@+id/local_person_icon_view"
        android:layout_below        = "@id/local_venue_icon_view"
        android:textSize            = "12dip"/>

    <ImageView
        android:id                 = "@+id/local_clock_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "4dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_person_number"
        android:layout_below       = "@id/local_venue_icon_view"
        android:src                = "@drawable/ome_small_clock" />

    <TextView
        android:id                 = "@+id/local_play_time"
        android:layout_width       = "wrap_content"
        android:layout_height      = "wrap_content"
        android:layout_marginLeft  = "2dp"
        android:layout_marginRight = "4dp"
        android:layout_alignTop    = "@id/local_clock_icon_view"
        android:layout_toRightOf   = "@+id/local_clock_icon_view"
        android:layout_below       = "@id/local_venue_icon_view"
        android:textSize           = "12dip"/>

    <ImageView
        android:id                 = "@+id/local_distance_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "4dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_play_time"
        android:layout_below       = "@id/local_venue_icon_view"
        android:src                = "@drawable/ome_small_distance" />

    <TextView
        android:id                 = "@+id/local_distance_to_me"
        android:layout_width       = "wrap_content"
        android:layout_height      = "wrap_content"
        android:layout_marginLeft  = "2dp"
        android:layout_marginRight = "4dp"
        android:layout_alignTop    = "@id/local_distance_icon_view"
        android:layout_toRightOf   = "@+id/local_distance_icon_view"
        android:layout_below       = "@id/local_venue_icon_view"
        android:textSize           = "12dip"/>



    <!-- Rightend Duration -->
    <TextView
        android:id                      = "@+id/duration"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_alignTop         = "@id/username_view"
        android:gravity                 = "right"
        android:layout_marginRight      = "5dip"
        android:textSize                = "10dip"/>
<!--
    <ImageView
        android:id                 = "@+id/pin_view"
        android:layout_width       = "24dp"
        android:layout_height      = "24dp"
        android:layout_alignParentRight = "true"
        android:layout_alignTop    = "@id/content_view"
        android:layout_below       = "@id/duration"
        android:layout_marginRight = "8dp"/>
-->
    <!-- Rightend Arrow -->
    <ImageView
        android:id                      = "@+id/sport_type_icon"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:layout_below            = "@id/duration"
        android:src                     = "@drawable/ome_other_icon"
        android:layout_alignParentRight = "true"
        android:layout_centerVertical   = "true"/>

</RelativeLayout>