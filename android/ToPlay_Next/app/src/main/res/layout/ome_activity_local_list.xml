<?xml version="1.0" encoding="utf-8"?>

<!-- android:background="@drawable/list_selector"-->
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width  = "wrap_content"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:padding       = "5dip" >

    <ImageView
        android:id                      = "@+id/local_sport_type_icon"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:src                     = "@drawable/ome_other_icon"
        android:layout_centerVertical = "true"/>


    <TextView
        android:id                = "@+id/local_workoutname_view"
        android:layout_width      = "wrap_content"
        android:layout_height     = "wrap_content"
        android:layout_marginLeft = "12dp"
        android:layout_toRightOf  = "@id/local_sport_type_icon"
        android:textAppearance    = "?android:attr/textAppearanceSmall" />

    <ImageView
        android:id                 = "@+id/local_venue_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "8dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "4dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_sport_type_icon"
        android:layout_below       = "@id/local_workoutname_view"
        android:src                = "@drawable/ome_small_venue" />

    <TextView
        android:id               = "@+id/local_venue_address"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_marginTop = "1dp"
        android:layout_alignTop  = "@id/local_venue_icon_view"
        android:layout_toRightOf = "@+id/local_venue_icon_view"
        android:layout_below     = "@id/local_workoutname_view"
        android:paddingLeft      = "4dp"
        android:textSize         = "12dip" />

    <ImageView
        android:id                 = "@+id/local_clock_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "8dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_sport_type_icon"
        android:layout_below       = "@id/local_venue_address"
        android:src                = "@drawable/ome_small_clock" />

    <TextView
        android:id                 = "@+id/local_play_time"
        android:layout_width       = "wrap_content"
        android:layout_height      = "wrap_content"
        android:layout_marginLeft  = "2dp"
        android:layout_marginRight = "4dp"
        android:layout_alignTop    = "@id/local_clock_icon_view"
        android:layout_toRightOf   = "@+id/local_clock_icon_view"
        android:layout_below       = "@id/local_venue_address"
        android:textSize           = "12dip"/>

    <ImageView
        android:id                 = "@+id/local_distance_icon_view"
        android:layout_width       = "20dp"
        android:layout_height      = "20dp"
        android:layout_marginLeft  = "4dp"
        android:layout_marginRight = "2dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "2dp"
        android:layout_toRightOf   = "@id/local_play_time"
        android:layout_below       = "@id/local_venue_address"
        android:src                = "@drawable/ome_small_distance" />

    <TextView
        android:id                 = "@+id/local_distance_to_me"
        android:layout_width       = "wrap_content"
        android:layout_height      = "wrap_content"
        android:layout_marginLeft  = "2dp"
        android:layout_marginRight = "4dp"
        android:layout_alignTop    = "@id/local_distance_icon_view"
        android:layout_toRightOf   = "@+id/local_distance_icon_view"
        android:layout_below       = "@id/local_venue_address"
        android:textSize           = "12dip"/>

</RelativeLayout>