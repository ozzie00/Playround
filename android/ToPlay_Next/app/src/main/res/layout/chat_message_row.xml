<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_row_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/message_text_layout"
        android:layout_width="300dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/friend_avator"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/user_green"
                android:background="@drawable/ome_circle"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_text_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/friend_avator"
            android:layout_toRightOf="@id/friend_avator"
            android:paddingLeft="15dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:background="@drawable/chatleft">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_title"
                android:text="Title"
                android:textSize="@dimen/text_smallish"
                android:textColor="@color/gray_darker"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:autoLink="web|phone|email"
                android:id="@+id/message_text"
                android:text="message text"
                android:textSize="@dimen/text_smallish"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:id="@+id/message_text_time"
                android:textColor="@color/grey_dark"
                android:text="send time"
                android:textSize="@dimen/text_tiny" />

            <ProgressBar
                android:id="@+id/file_transfer_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="50"
                android:layout_width="200dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/file_transfer_progress_text"
                android:text="Finished"
                android:textSize="@dimen/text_smallish"
                android:textColor="@color/gray_darker"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <View
                android:id="@+id/file_transfer_padding"
                android:visibility="gone"
                android:layout_height="10dp"
                android:layout_width="match_parent"
                />

            <FrameLayout
                android:id="@+id/message_sent_photo_frame"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/message_sent_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/file_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:contentDescription="Send Button"
                    android:id="@+id/file_reject_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_medium"
                    android:layout_weight="2"
                    android:src="@drawable/ic_action_cancel" />
                <View android:layout_height="fill_parent"
                    android:layout_width="2px"
                    android:background="#90909090"/>
                <ImageView
                    android:contentDescription="Send Button"
                    android:id="@+id/file_accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_medium"

                    android:src="@drawable/ic_action_tick"
                    android:adjustViewBounds="false"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_audio_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/message_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_play"
                    />
                <SeekBar
                    android:id="@+id/message_audio_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/message_text_date"
                android:textColor="@color/white_absolute"
                android:text=""
                android:textSize="@dimen/text_tiny" />

            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_sent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="-2dp"
                android:maxHeight="13dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="4dp"
                android:id="@+id/chat_row_sent"
                android:visibility="visible"
                android:layout_gravity="top"/>
            -->

            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_received"
                android:layout_marginTop="1dp"
                android:maxHeight="13dp"
                android:layout_marginBottom="-2dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="6dp"
                android:id="@+id/chat_row_received"
                android:visibility="visible"
                android:layout_gravity="top"/>
            -->

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

