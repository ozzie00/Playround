<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id            = "@+id/uploadvenue_linerlayout"
    android:layout_width  = "match_parent"
    android:layout_height = "match_parent"
    android:orientation   = "vertical"
    android:weightSum     = "1">

    <include layout="@layout/toolbar_actionbar_with_headerbar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width  ="fill_parent"
        android:layout_height = "48dp"
        android:layout_marginTop = "16dp"
        android:layout_marginBottom= "4dp"
        android:layout_marginLeft  = "2dp"
        android:layout_marginRight = "2dp"
        android:orientation   = "horizontal"
        android:padding       = "2dp"
        android:background    = "@drawable/ome_textfield_rectangle_background" >

        <RelativeLayout
            android:layout_width     = "wrap_content"
            android:layout_height    = "wrap_content"
            android:orientation      = "horizontal">

            <ImageView
                android:id                 = "@+id/uploadvenue_name_icon_view"
                android:layout_width       = "32dp"
                android:layout_height      = "32dp"
                android:layout_marginTop   = "8dp"
                android:layout_marginBottom= "8dp"
                android:layout_marginLeft  = "8dp"
                android:layout_marginRight = "8dp"
                android:layout_gravity     = "center_vertical"
                android:src                = "@drawable/ome_invite_venue"/>

            <EditText
                android:id                  = "@+id/uploadvenue_name_Text"
                android:layout_width        = "180dp"
                android:layout_height       = "wrap_content"
                android:layout_marginLeft   = "6dp"
                android:layout_toRightOf    = "@id/uploadvenue_name_icon_view"
                android:layout_centerVertical="true"
                android:hint                = "@string/OMEPARSEMEMYVENUENAME"
                android:singleLine          = "true"
                android:textAppearance      = "?android:attr/textAppearanceSmall"
                android:textColor           = "@android:color/black"
                android:background          = "@null"
                android:focusable           = "true">
                <requestFocus />
            </EditText>

            <ImageView
                android:id                      = "@+id/uploadvenue_content_voice_view"
                android:layout_width            = "wrap_content"
                android:layout_height           = "wrap_content"
                android:layout_marginTop        = "8dp"
                android:layout_marginBottom     = "8dp"
                android:layout_alignParentRight = "true"
                android:paddingRight            = "16dp"
                android:src                     = "@drawable/ome_voice_icon"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id               = "@+id/uploadvenue_location_block"
        android:layout_width     = "fill_parent"
        android:layout_height    = "wrap_content"
        android:orientation      = "horizontal"
        android:layout_marginTop = "16dp"
        android:background       = "@color/white_absolute">

        <ImageView
            android:id                 = "@+id/uploadvenue_location_icon_view"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginLeft  = "8dp"
            android:layout_marginRight = "8dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginBottom= "8dp"
            android:layout_centerVertical="true"
            android:src                = "@drawable/ome_small_venue"/>

        <TextView
            android:id                    = "@+id/uploadvenue_location_text_view"
            android:layout_width          = "wrap_content"
            android:layout_height         = "wrap_content"
            android:layout_marginTop      = "8dp"
            android:layout_marginRight    = "8dp"
            android:layout_toRightOf      = "@id/uploadvenue_location_icon_view"
            android:layout_centerVertical = "true"
            android:text                  = "@string/OMEPARSEUPLOADVENUEADDRESS"
            android:paddingLeft           = "8dp"
            android:paddingRight          = "8dp"
            android:textAppearance        = "?android:attr/textAppearanceSmall" />

        <TextView
            android:id                      = "@+id/uploadvenue_location_address_view"
            android:layout_width            = "wrap_content"
            android:layout_height           = "wrap_content"
            android:layout_marginTop        = "8dp"
            android:layout_marginLeft       = "112dp"
            android:layout_centerVertical   = "true"
            android:layout_alignParentRight = "true"
            android:paddingLeft             = "8dp"
            android:paddingRight            = "16dp"
            android:textAppearance          = "?android:attr/textAppearanceSmall"
            android:textColor               = "@android:color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id               = "@+id/uploadvenue_phone_block"
        android:layout_width     = "fill_parent"
        android:layout_height    = "wrap_content"
        android:orientation      = "horizontal"
        android:layout_marginTop = "16dp"
        android:background       ="@color/white_absolute">

        <ImageView
            android:id                 = "@+id/uploadvenue_phone_icon_view"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginLeft  = "8dp"
            android:layout_marginRight = "8dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginBottom= "8dp"
            android:layout_centerVertical="true"
            android:src                = "@drawable/ome_venue_call"/>

        <TextView
            android:id                    = "@+id/uploadvenue_phone"
            android:layout_width          = "wrap_content"
            android:layout_height         = "wrap_content"
            android:layout_marginTop      = "8dp"
            android:layout_marginRight    = "8dp"
            android:layout_toRightOf      = "@id/uploadvenue_phone_icon_view"
            android:layout_centerVertical = "true"
            android:text                  = "@string/OMEPARSEUPLOADVENUEPHONE"
            android:paddingLeft           = "8dp"
            android:paddingRight          = "8dp"
            android:textAppearance        = "?android:attr/textAppearanceSmall" />

        <TextView
            android:id                      = "@+id/uploadvenue_phone_view"
            android:layout_width            = "wrap_content"
            android:layout_height           = "wrap_content"
            android:layout_marginTop        = "8dp"
            android:layout_marginLeft       = "112dp"
            android:layout_centerVertical   = "true"
            android:layout_alignParentRight = "true"
            android:paddingLeft             = "8dp"
            android:paddingRight            = "16dp"
            android:textAppearance          = "?android:attr/textAppearanceSmall"
            android:textColor               = "@android:color/black"/>
    </RelativeLayout>


</LinearLayout>