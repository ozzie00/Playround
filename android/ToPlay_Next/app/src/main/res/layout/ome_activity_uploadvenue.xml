    <LinearLayout
        android:id            = "@+id/uploadvenue_name_linearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:weightSum="1">

        <TextView
            android:id                     = "@+id/uploadvenue_name"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEMEMYVENUENAME"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "16dp"
            android:layout_marginLeft      = "8dp" />

        <EditText
            android:id                     = "@+id/uploadvenue_name_Text"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "16dp"
            android:layout_weight          = "1"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"/>

        <requestFocus />

    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/uploadvenue_address_linearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/uploadvenue_address"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEMEMYVENUEADDRESS"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp" />

        <EditText
            android:id                     = "@+id/uploadvenue_address_Text"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "16dp"
            android:layout_weight          = "1"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/uploadvenue_phone_linearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/uploadvenue_phone"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEMEMYVENUEPHONE"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp" />

        <EditText
            android:id                     = "@+id/uploadvenue_phone_Text"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "16dp"
            android:layout_weight          = "1"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"/>

    </LinearLayout>


    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <Button
        android:id                  = "@+id/uploadvenue_submit_button"
        android:layout_width        = "200dp"
        android:layout_height       = "40dp"
        android:layout_marginTop    = "16dp"
        android:cropToPadding       = "false"
        android:clickable           = "true"
        android:layout_gravity      = "center"
        android:focusable           = "false"
        android:adjustViewBounds    = "false"
        android:baselineAlignBottom = "false"
        android:text                = "@string/OMEPARSEMEMYVENUESUBMIT"
        android:textColor           = "@android:color/white"
        android:textSize            = "15sp"
        android:background          = "#1DA155"/>


</LinearLayout>