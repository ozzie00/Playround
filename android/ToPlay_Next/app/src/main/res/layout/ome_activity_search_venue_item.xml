<?xml version="1.0" encoding="utf-8"?>

<!-- android:background="@drawable/list_selector"-->
<RelativeLayout xmlns:android    = "http://schemas.android.com/apk/res/android"
    android:layout_width         = "fill_parent"
    android:layout_height        = "wrap_content"
    android:orientation          = "horizontal"
    android:paddingBottom        = "@dimen/margin_medium"
    android:paddingLeft          = "@dimen/margin_small"
    android:paddingRight         = "@dimen/margin_small"
    android:focusableInTouchMode = "true"
    android:paddingTop           = "@dimen/margin_medium"
    android:background           = "@color/white_absolute">

    <ImageButton
        android:id="@+id/search_venue_avatar_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ome_me_venue"
        android:layout_marginLeft  = "4dp"
        android:layout_marginRight = "4dp"
        android:layout_marginTop   = "8dp"
        android:layout_marginBottom= "8dp"
        android:background="@drawable/ome_venue_sport_circle_button"
        />



    <TextView
        android:id               = "@+id/search_venue_name_view"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_alignTop  = "@+id/search_venue_avatar_button"
        android:layout_toRightOf = "@id/search_venue_avatar_button"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall" />

    <TextView
        android:id                      = "@+id/search_venue_phone_view"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_alignTop         = "@+id/search_venue_name_view"
        android:layout_toRightOf        = "@+id/search_venue_name_view"
        android:gravity                 = "right"
        android:layout_marginRight      = "5dip"
        android:textSize                = "12dip"/>

    <TextView
        android:id               = "@+id/search_venue_address_view"
        android:layout_width     = "180dp"
        android:layout_height    = "wrap_content"
        android:layout_below     = "@id/search_venue_name_view"
        android:layout_marginTop = "8dp"
        android:layout_toRightOf = "@+id/search_venue_avatar_button"
        android:paddingLeft      = "8dp"
        android:textAppearance   = "?android:attr/textAppearanceSmall" />

    <TextView
        android:id               = "@+id/search_venue_distance_view"
        android:layout_width     = "wrap_content"
        android:layout_height    = "wrap_content"
        android:layout_below     = "@+id/search_venue_address_view"
        android:layout_toRightOf = "@+id/search_venue_avatar_button"
        android:layout_marginTop = "8dp"
        android:paddingLeft      = "8dp"
        android:textSize         = "12dip"/>

    <ImageButton
        android:id                    = "@+id/search_venue_call_button"
        android:layout_width          = "48dp"
        android:layout_height         = "48dp"
        android:layout_marginLeft     = "8dp"
        android:layout_marginRight    = "8dp"
        android:layout_gravity        = "right"
        android:layout_centerVertical = "true"
        android:layout_toRightOf      = "@+id/search_venue_address_view"
        android:cropToPadding         = "false"
        android:focusable             = "false"
        android:adjustViewBounds      = "false"
        android:baselineAlignBottom   = "false"
        android:visibility            = "invisible"
        android:src                   = "@drawable/ome_venue_call"
        android:background            = "@drawable/ome_venue_call_circle_button" />

    <!--android:onClick="toggle"-->

</RelativeLayout>