        android:layout_height="wrap_content" >

        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />

    </EditText>


-->

</LinearLayout>