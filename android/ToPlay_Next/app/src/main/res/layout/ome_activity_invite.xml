<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id            = "@+id/invite_linerlayout"
    android:layout_width  = "match_parent"
    android:layout_height = "match_parent"
    android:orientation   = "vertical"
    android:weightSum     = "1">

    <LinearLayout
        android:id            = "@+id/sporttypelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/invite_sport_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginRight = "16dp"
            android:src                = "@drawable/ome_me_sport"
            android:layout_marginLeft  ="16dp" />

        <Spinner
            android:id                = "@+id/sport_spinner"
            android:layout_width      = "fill_parent"
            android:layout_height     = "wrap_content"
            android:layout_marginTop  = "8dp"
            android:drawSelectorOnTop = "true"
            android:prompt="@string/OMEPARSEINVITESPORTPROMPT"
            />

        <Button
            android:id                  = "@+id/sporttypeButton"
            android:layout_width        = "120dp"
            android:layout_height       = "40dp"
            android:layout_marginLeft   = "100dp"
            android:layout_marginRight  = "8dp"
            android:layout_marginBottom = "2dp"
            android:layout_marginTop    = "8dp"
            android:textSize            = "15sp"
            android:textColor           = "@android:color/secondary_text_dark"
            android:background          = "@android:color/transparent"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/invitetimelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/invite_time_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginRight = "16dp"
            android:src                = "@drawable/ome_clock_icon"
            android:layout_marginLeft  ="16dp" />

        <Button
            android:id                 = "@+id/dateButton"
            android:layout_width       = "60dp"
            android:layout_height      = "40dp"
            android:layout_marginLeft  = "120dp"
            android:layout_marginRight = "4dp"
            android:layout_marginTop   = "8dp"
            android:textSize           = "15sp"
            android:textColor          = "@android:color/secondary_text_dark"
            android:background         = "@android:color/transparent"/>

        <Button
            android:id                     = "@+id/timeButton"
            android:layout_width           = "60dp"
            android:layout_height          = "40dp"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginLeft      = "4dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor              = "@android:color/secondary_text_dark"
            android:background             = "@android:color/transparent"/>

        <requestFocus />
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/invitecourtlinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <ImageView
            android:id                 = "@+id/invite_court_image"
            android:layout_width       = "32dp"
            android:layout_height      = "32dp"
            android:layout_marginTop   = "8dp"
            android:layout_marginRight = "16dp"
            android:src                = "@drawable/ome_me_venue"
            android:layout_marginLeft  ="16dp" />

        <AutoCompleteTextView android:id = "@+id/invitecourtautocomplete"
            android:layout_width         = "match_parent"
            android:layout_height        = "40dp"
            android:completionThreshold  = "1"
            android:textSize             = "15sp"
            android:textColor            = "@android:color/secondary_text_dark"
            />
        <requestFocus />
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>


</LinearLayout>