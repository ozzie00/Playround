<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id            = "@+id/invite_linerlayout"
    android:layout_width  = "match_parent"
    android:layout_height = "wrap_content"
    android:orientation   = "vertical"
    android:weightSum     = "1">

    <LinearLayout
        android:id            = "@+id/sporttypelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/sporttype"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTSPORTTYPE"
            android:layout_alignParentRight= "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp"
            android:layout_marginRight     = "20dp"/>

        <Spinner
            android:id                = "@+id/sport_spinner"
            android:layout_width      = "fill_parent"
            android:layout_height     = "wrap_content"
            android:layout_marginTop  = "8dp"
            android:drawSelectorOnTop = "true"
            android:prompt="@string/OMEPARSEINVITESPORTPROMPT"
            />

        <Button
            android:id                     = "@+id/sporttypeButton"
            android:layout_width           = "120dp"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "100dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginBottom    = "2dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background = "@android:color/transparent"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/playerlevellinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/guestplayerlevel"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTPLAYERLEVEL"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp"
            android:layout_marginRight     = "20dp"/>

        <Button
            android:id                     = "@+id/playerlevelButton"
            android:layout_width           = "120dp"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "100dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background = "@android:color/transparent"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/playernumberlinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/guestplayernumber"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTPLAYERNUMBER"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp"
            android:layout_marginRight     = "20dp" />

        <Button
            android:id                     = "@+id/playernumberButton"
            android:layout_width           = "120dp"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "100dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background = "@android:color/transparent"/>
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/invitetimelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/invitetime"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTTIME"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp" />
<!--
        <EditText
            android:id                     = "@+id/invitetimeText"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"/>

          -->

        <Button
            android:id                     = "@+id/dateButton"
            android:layout_width           = "60dp"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "120dp"
            android:layout_marginRight     = "4dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background="@android:color/transparent"/>

        <Button
            android:id                     = "@+id/timeButton"
            android:layout_width           = "60dp"
            android:layout_height          = "40dp"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginLeft      = "4dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background = "@android:color/transparent"/>

        <requestFocus />
    </LinearLayout>

    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/invitecourtlinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/invitecourt"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTCOURT"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp" />

        <AutoCompleteTextView android:id   = "@+id/invitecourtautocomplete"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:completionThreshold    = "1"
            android:textSize               = "15sp"
            android:textColor              = "@android:color/secondary_text_dark"
            />


        <requestFocus />
    </LinearLayout>




    <View
        android:layout_width  ="fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>



    <LinearLayout
        android:id            = "@+id/inviteplayfeelinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal" >

        <TextView
            android:id                     = "@+id/invitefee"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTFEE"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "8dp"
            android:layout_marginLeft      = "8dp"
            android:layout_marginRight     = "20dp"/>

        <Button
            android:id                     = "@+id/invitefeeButton"
            android:layout_width           = "120dp"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "100dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "8dp"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"
            android:background = "@android:color/transparent"/>
    </LinearLayout>


    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>

    <LinearLayout
        android:id            = "@+id/inviteotherlinearlayout"
        android:layout_width  = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation   = "horizontal"
        android:weightSum="1">

        <TextView
            android:id                     = "@+id/inviteother"
            android:layout_width           = "100dp"
            android:layout_height          = "40dp"
            android:text                   = "@string/OMEPARSEINVITEREQUIREMENTOTHER"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentTop  = "true"
            android:layout_marginTop       = "16dp"
            android:layout_marginLeft      = "8dp" />

        <EditText
            android:id                     = "@+id/inviteotherText"
            android:layout_width           = "match_parent"
            android:layout_height          = "40dp"
            android:layout_marginLeft      = "20dp"
            android:layout_marginRight     = "8dp"
            android:layout_marginTop       = "16dp"
            android:layout_weight          = "1"
            android:textSize               = "15sp"
            android:textColor  = "@android:color/secondary_text_dark"/>

        <requestFocus />

    </LinearLayout>



    <View
        android:layout_width  = "fill_parent"
        android:layout_height = "1dp"
        android:background    = "#c0c0c0"/>




