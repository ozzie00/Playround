<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#1DA155"
                android:startColor="#1DA155" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="1dp"
                android:color="#1DA155" />
            <corners
                android:radius="48dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                    android:endColor="#EFEFEF"
                    android:startColor="#EFEFEF" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                    android:width="1dp"
                    android:color="@color/white_absolute" />
            <corners
                    android:radius="48dp" />
        </shape>
    </item>

</selector>