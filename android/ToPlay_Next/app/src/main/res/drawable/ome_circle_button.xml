<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/white_absolute"
                android:startColor="@color/white_absolute"
                android:angle="270"/>
            <size
                android:width="64dp"
                android:height="64dp" />
            <stroke
                android:width="1dp"
                android:color="#B2B2B2" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                    android:endColor="@color/white_absolute"
                    android:startColor="@color/white_absolute"
                    android:angle="270"/>
            <size
                android:width="64dp"
                android:height="64dp" />
            <stroke
                    android:width="1dp"
                    android:color="#B2B2B2" />
            <corners
                    android:radius="50dp" />
        </shape>
    </item>

</selector>