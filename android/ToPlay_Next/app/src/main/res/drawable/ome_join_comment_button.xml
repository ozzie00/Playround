<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/grey" />
            <stroke
                android:width="1dp"
                android:color="@color/white_absolute" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/white_absolute"
                android:endColor="@color/grey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>